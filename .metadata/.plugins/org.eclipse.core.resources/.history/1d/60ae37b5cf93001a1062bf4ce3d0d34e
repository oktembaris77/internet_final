package DAO;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;

import Classes.TAKIM;

public class TakimKayitIslemi {
	String connURL = "jdbc:sqlserver://localhost:1433;databaseName=DB_TURNUVA;integratedSecurity=true;";
	public boolean TakimKayit(TAKIM takim) {
		String insertQuery = "INSERT INTO takimlar (takim_adi,sehir) VALUES(?,?)";
		try {
			Connection conn = DriverManager.getConnection(connURL);
			PreparedStatement pst = conn.prepareStatement("INSERT INTO takimlar (takim_adi,sehir) VALUES(?,?)");
			pst.setString(1,takim.getTakimAdi());
			pst.setString(2,takim.getSehir());
			pst.execute();
			return true;
		}catch(Exception ex) {
			ex.printStackTrace();
			return false;
		}
		
		
	}
}
